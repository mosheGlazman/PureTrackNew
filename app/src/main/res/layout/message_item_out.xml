<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_point"
        android:layout_width="12dp"
        android:background="@drawable/message_out_background_shadow"
        android:layout_marginStart="4dp"
        android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/message_out_background_shadow"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:gravity="center|start"
            android:textColor="#404040"
            android:minWidth="70dp"
            android:padding="8dp"
            android:text="er sfdg sdf gsdgfrsf grelk gret j4m ty ol5jr y5ojy5 royj oj ih h jbh jh jh er"
            android:textSize="22dp"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_gravity="center|end"
            android:textColor="#707070"
            android:padding="3dp"
            android:text="12:45"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>