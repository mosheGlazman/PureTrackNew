<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_point"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/message_in_background_shadow" />

    <View android:id="@+id/v_space"
        android:layout_width="60dp"
        android:layout_alignParentStart="true"
        android:layout_height="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/v_point"
        android:layout_toEndOf="@+id/v_space"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/message_in_background_shadow"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_gravity="center|start"
                android:textColor="#39447C"
                android:padding="3dp"
                android:text="מוישה זוכמיער"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:gravity="center|start"
                android:layout_gravity="end"
                android:textColor="#404040"
                android:minWidth="70dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="h bgf hth trhtrtgfujh h t"
                android:textSize="22dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_gravity="center|end"
                android:textColor="#707070"
                android:padding="3dp"
                android:text="12:45"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>